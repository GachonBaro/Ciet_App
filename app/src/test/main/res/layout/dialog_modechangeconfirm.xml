<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="167dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_white_rounded_background">

    <TextView
        android:id="@+id/dialog_modechangeconfirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:text="모드 변경"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:includeFontPadding="false"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/dialog_modechangeconfirm_question_deactivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosansregular"
        android:text="챌린지 모드를 비활성화 하시겠습니까?"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_modechangeconfirm_title"
        android:includeFontPadding="false"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/dialog_modechangeconfirm_description_deactivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:text="비활성화 시 자유롭게 콘텐츠를 선택하고 수행할 수 있습니다."
        android:textSize="9sp"
        android:textColor="@color/seco_red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_modechangeconfirm_question_deactivate"
        android:includeFontPadding="false"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/dialog_modechangeconfirm_question_activate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosansregular"
        android:text="챌린지 모드를 활성화 하시겠습니까?"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_modechangeconfirm_title"
        android:includeFontPadding="false"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/dialog_modechangeconfirm_description_activate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:text="활성화 시 정해진 기간과 목표에 따른 수행도에 따라 추가 리워드가 지급됩니다."
        android:textSize="9sp"
        android:textColor="@color/seco_red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_modechangeconfirm_question_deactivate"
        android:includeFontPadding="false"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/dialog_modechangeconfirm_button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="취소"
        android:textColor="@color/seco_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dialog_modechangeconfirm_divider"
        app:layout_constraintTop_toBottomOf="@id/dialog_modechangeconfirm_description_deactivate"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/dialog_modechangeconfirm_divider"
        android:layout_width="2dp"
        android:layout_height="30dp"
        android:background="@drawable/item_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_modechangeconfirm_description_deactivate"/>

    <Button
        android:id="@+id/dialog_modechangeconfirm_button_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="확인"
        android:textColor="@color/seco_blue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dialog_modechangeconfirm_divider"
        app:layout_constraintTop_toBottomOf="@id/dialog_modechangeconfirm_description_deactivate"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>