<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seti_survey_intro_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetiSurveyIntroActivity">

    <TextView
        android:id="@+id/activity_seti_survey_intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:textSize="25sp"
        android:text="Samsung\nEco\nType\nIndicator"
        android:textColor="@color/seco_green"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_seti_survey_intro_image"
        />

    <ImageView
        android:id="@+id/activity_seti_survey_intro_image"
        android:layout_width="265dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_image_initq_seti_suggest"
        app:layout_constraintBottom_toTopOf="@id/activity_seti_survey_intro_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_seti_survey_intro_title" />

    <TextView
        android:id="@+id/activity_seti_survey_intro_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="SETI 설문조사를 시작할게요!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_seti_survey_intro_image"
        app:layout_constraintBottom_toTopOf="@id/activity_seti_survey_intro_button_start"/>

    <Button
        android:id="@+id/activity_seti_survey_intro_button_start"
        android:layout_width="338dp"
        android:layout_height="58dp"
        android:background="@drawable/button_rounded_green"
        android:text="START"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_seti_survey_intro_text"
        android:stateListAnimator="@null"/>


</androidx.constraintlayout.widget.ConstraintLayout>