<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthCompletionActivity">

    <TextView
        android:id="@+id/activity_auth_completion_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:text="___ 인증 완료!"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/activity_auth_completion_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/notosansregular"
        android:text="21년 10월 10일"
        android:textColor="@android:color/black"
        android:textSize="@dimen/photo_auth_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_auth_completion_title_text_view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/activity_auth_completion_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosansregular"
        android:text="인증 시간 11:23 - 12:33"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_auth_completion_date_text_view"
        tools:ignore="MissingConstraints" />



    <ImageView
        android:id="@+id/activity_auth_completion_badge_image_view"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="78dp"
        android:src="@drawable/ic_badge_green"
        app:layout_constraintLeft_toLeftOf="@id/activity_auth_completion_time_text_view"
        app:layout_constraintTop_toBottomOf="@id/activity_auth_completion_time_text_view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/activity_auth_completion_badge_num_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:text="X 3"
        android:textColor="@color/seco_green"
        android:textSize="29sp"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toRightOf="@id/activity_auth_completion_badge_image_view"
        app:layout_constraintTop_toTopOf="@id/activity_auth_completion_badge_image_view"
        app:layout_constraintBottom_toBottomOf="@id/activity_auth_completion_badge_image_view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/activity_auth_completion_badge_payment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:text="지급 완료"
        android:textColor="@color/seco_green"
        android:textSize="29sp"
        android:includeFontPadding="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_auth_completion_badge_image_view"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/activity_auth_completion_upload_button"
        android:layout_width="338dp"
        android:layout_height="58dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_initq_unchecked"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:text="인증 데이터 업로드 중..."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>