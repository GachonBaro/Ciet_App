<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="338dp"
        android:layout_height="290dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/item_white_rounded_background"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/activity_reward_history_title_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:includeFontPadding="false"
            android:text="진행중"
            android:textColor="@color/seco_green"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/activity_reward_history_image"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/map_image"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/activity_reward_history_title_status" />

        <TextView
            android:id="@+id/activity_reward_history_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:includeFontPadding="false"
            android:text="용기내 챌린지"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/activity_reward_history_image"
            app:layout_constraintTop_toTopOf="@id/activity_reward_history_image" />

        <TextView
            android:id="@+id/item_mycmi_activity_suggest_carbon_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:includeFontPadding="false"
            android:text="업로드 일자"
            android:textColor="@color/seco_deepgray"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/activity_reward_history_image"
            app:layout_constraintTop_toBottomOf="@id/activity_reward_history_name" />

        <TextView
            android:id="@+id/activity_reward_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:includeFontPadding="false"
            android:text="지급 일자"
            android:textColor="@color/seco_deepgray"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/activity_reward_history_image"
            app:layout_constraintTop_toBottomOf="@id/item_mycmi_activity_suggest_carbon_amount" />

        <TextView
            android:id="@+id/activity_reward_upload_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:includeFontPadding="false"
            android:text="2021-08-03"
            android:textColor="@color/seco_deepgray"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_reward_history_name" />

        <TextView
            android:id="@+id/activity_reward_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:includeFontPadding="false"
            android:text="2021-08-03"
            android:textColor="@color/seco_deepgray"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_reward_upload_date" />

        <TextView
            android:id="@+id/activity_reward_progress_text_1"
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_initq_checked"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="진행중"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_reward_history_image" />

        <TextView
            android:id="@+id/activity_reward_progress_text_2"
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_initq_checked"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="진행중"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_reward_history_image" />

        <TextView
            android:id="@+id/activity_reward_progress_text_3"
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_initq_checked"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="지급 완료"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_reward_history_image" />

        <com.skydoves.progressview.ProgressView
            android:id="@+id/activity_reward_progressbar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/activity_reward_progress_text_2"
            app:progressView_colorBackground="@color/seco_gray"
            app:progressView_colorProgress="@color/seco_green"
            app:progressView_max="100"
            app:progressView_min="0"
            tools:layout_editor_absoluteX="20dp" />

        <TextView
            android:id="@+id/activity_reward_status_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:includeFontPadding="false"
            android:text="사진 검증 중"
            android:textColor="@color/seco_deepgray"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_reward_progressbar" />

        <TextView
            android:id="@+id/activity_reward_status_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:includeFontPadding="false"
            android:text="사진 검증완료"
            android:textColor="@color/seco_deepgray"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_reward_progressbar" />

        <TextView
            android:id="@+id/activity_reward_status_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:includeFontPadding="false"
            android:text="리워드 지급 완료"
            android:textColor="@color/seco_deepgray"
            android:textSize="11sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_reward_progressbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>