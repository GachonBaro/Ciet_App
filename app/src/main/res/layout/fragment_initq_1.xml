<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.initsurvey.Fragment_initQ_1">

    <RadioGroup
        android:id="@+id/q5_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/init_question1">

        <RadioButton
            android:id="@+id/a1"
            android:layout_width="338dp"
            android:layout_height="58dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_initq_selector"
            android:button="@android:color/transparent"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:gravity="center"
            android:text="RadioButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@drawable/text_toggle_selector"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="313dp" />

        <RadioButton
            android:id="@+id/b1"
            android:layout_width="338dp"
            android:layout_height="58dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_initq_selector"
            android:button="@android:color/transparent"
            android:textColor="@drawable/text_toggle_selector"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:gravity="center"
            android:text="RadioButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="313dp" />

        <RadioButton
            android:id="@+id/c1"
            android:layout_width="338dp"
            android:layout_height="58dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_initq_selector"
            android:button="@android:color/transparent"
            android:textColor="@drawable/text_toggle_selector"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:gravity="center"
            android:text="RadioButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="313dp" />

    </RadioGroup>


    <TextView
        android:id="@+id/init_question1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="50dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>