<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_activity_of_today_layout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_white_corner_radius_7dp"
        android:elevation="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/item_activity_of_today_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:text="-"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:includeFontPadding="false"
            android:gravity="left"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"/>

        <ImageView
            android:id="@+id/item_activity_of_today_auth_completion_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_button_setiq_unchecked"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/item_activity_of_today_auth_completion_text_view"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/item_activity_of_today_auth_completion_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:text="인증 미완료"
            android:textColor="@color/text_color_gray"
            android:textSize="14sp"
            android:includeFontPadding="false"
            android:gravity="left"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>