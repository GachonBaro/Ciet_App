<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SetiSurveyResultActivity">

    <RelativeLayout
        android:id="@+id/activity_seti_result_typo_layout"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_seti_result_button_exit"
        app:layout_constraintBottom_toTopOf="@id/activity_seti_result_text_result_image">

        <TextView
            android:id="@+id/activity_seti_result_typo_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_seti_result_typo_2"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="-20dp"
            android:fontFamily="@font/notosansregular"
            android:includeFontPadding="false"
            android:rotation="-30"
            android:text="S"
            android:textColor="@color/seco_pink"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/activity_seti_result_typo_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/notosansregular"
            android:includeFontPadding="false"
            android:rotation="10"
            android:text="P"
            android:textColor="@color/seco_yellow"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/activity_seti_result_typo_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_seti_result_typo_2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-20dp"
            android:fontFamily="@font/notosansregular"
            android:includeFontPadding="false"
            android:text="A"
            android:textColor="@color/seco_applegreen"
            android:textSize="50sp" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/activity_seti_result_text_result_image"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/image_my_seti"
        app:layout_constraintBottom_toTopOf="@id/activity_seti_result_text_summary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_seti_result_typo_layout" />

    <TextView
        android:id="@+id/activity_seti_result_text_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:text="text"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/activity_seti_result_text_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_seti_result_text_result_image" />

    <TextView
        android:id="@+id/activity_seti_result_text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/seco_deepgray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/activity_seti_result_button_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_seti_result_text_summary" />

    <Button
        android:id="@+id/activity_seti_result_button_detail"
        android:layout_width="185dp"
        android:layout_height="40dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_initq_checked"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:stateListAnimator="@null"
        android:text="더 자세히 보기"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_seti_result_text_description" />

    <Button
        android:id="@+id/activity_seti_result_button_exit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/ic_button_setiq_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>