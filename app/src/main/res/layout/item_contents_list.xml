<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/item_free_mode_contents_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@drawable/image_overlay_gradation"
            android:scaleType="centerCrop"
            android:src="@drawable/vegan_meal"
            tools:ignore="InvalidId" />

<!--        <ImageButton-->
<!--            android:id="@+id/item_free_mode_like_button"-->
<!--            android:layout_width="32dp"-->
<!--            android:layout_height="32dp"-->
<!--            android:src="@drawable/ic_sharp_favorite_border_24"-->
<!--            android:background="@drawable/bg_like_icon"-->
<!--            android:layout_marginTop="25dp"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintRight_toRightOf="@+id/item_free_mode_read_more_button"-->
<!--            tools:ignore="MissingConstraints"/>-->

        <TextView
            android:id="@+id/contents_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textColor="@color/white"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/item_free_mode_read_more_button"
            app:layout_constraintBottom_toTopOf="@+id/item_free_mode_read_more_button"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/item_free_mode_badge_icon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_coin_really_new"
            app:layout_constraintRight_toLeftOf="@+id/num_of_activities_text"
            app:layout_constraintTop_toTopOf="@+id/num_of_activities_text"
            app:layout_constraintBottom_toBottomOf="@+id/num_of_activities_text"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/num_of_activities_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:text="활동 횟수 2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:textSize="11sp"
            android:layout_marginBottom="20dp"
            app:layout_constraintRight_toRightOf="@+id/item_free_mode_read_more_button"
            app:layout_constraintBottom_toTopOf="@+id/item_free_mode_read_more_button"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/item_free_mode_read_more_button"
            android:layout_width="320dp"
            android:layout_height="58dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/button_rounded_green"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:text="자세히 보기"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>